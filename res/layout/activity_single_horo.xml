<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <LinearLayout
        android:id="@+id/sLnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:id="@+id/sAd"
            android:orientation="vertical">
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/sRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".SingleHoroActivity" >

            <ImageView
                android:id="@+id/himg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aries"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/horscope_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/himg"
                android:text="نقوم بتحديث البرج..."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textDirection="anyRtl" />

            <TextView
                android:id="@+id/hdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/himg"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="28dp"
                android:layout_toRightOf="@+id/himg"
                android:text="19/9-15/7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textDirection="anyRtl" />

            <TextView
                android:id="@+id/hname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/hdate"
                android:layout_below="@+id/hdate"
                android:layout_marginRight="18dp"
                android:text="الحمل"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textDirection="anyRtl" />

            <RelativeLayout
                android:id="@+id/adrl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="35dp" >
            </RelativeLayout>

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/aries"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/horscope_text"
                android:src="@android:drawable/ic_menu_share" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>